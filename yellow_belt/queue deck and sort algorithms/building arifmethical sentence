#include <vector>
#include <algorithm>
#include <set>
#include <iostream>
#include <string>
using namespace std;
string actionAdd(string previousString,int number) {
    return "(" + previousString + ")" + " + " + to_string(number);
}
string actionMinus(string previousString, int number) {
    return "(" + previousString + ")" + " - " + to_string(number);
}
string actionMultiple(string previousString, int number) {
    return "(" + previousString + ")" + " * " + to_string(number);
}
string actionDivide(string previousString, int number) {
    return "(" + previousString + ")" + " / " + to_string(number);
}

void workWithInput(int n) {
    string result=to_string(n);
    int t;
    cin >> t;
    for (int i = 0; i < t; i++) {
        char action;
        cin >> action;
        int number;
        cin >> number;
        switch (action) {
        case '+':
            result = actionAdd(result,number);
            break;
        case'-':
            result = actionMinus(result, number);
            break;
        case'*':
            result = actionMultiple(result, number);
            break;
        case'/':
            result = actionDivide(result, number);
            break;
        }
    }
    cout << result << endl;;
}

int main() {
    int n;
    cin >> n;
    workWithInput(n);
    return 0;
}
